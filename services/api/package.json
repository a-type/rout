{
  "name": "@long-game/service-api",
  "private": true,
  "type": "module",
  "exports": {
    "./client": {
      "import": "./dist/hc.js",
      "types": "./dist/hc.d.ts"
    },
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "pnpm run --filter @long-game/service-api --parallel \"/^dev:.*/\"",
    "dev:client": "pnpm run build:api-client --watch --preserveWatchOutput",
    "dev:api": "wrangler dev --config wrangler.toml --port 3101 --inspector-port 9229 --ip 127.0.0.1",
    "build": "pnpm run --filter @long-game/service-api --parallel \"/^build:.*/\"",
    "build:api-client": "tsc -p tsconfig.client.json",
    "build:api": "wrangler deploy --dry-run --outdir dist --config wrangler.toml",
    "test:run": "vitest",
    "stripe": "stripe listen -f http://localhost:3101/stripe/webhook",
    "wrangler": "wrangler",
    "types": "wrangler types --env-interface=ApiBindings --c wrangler.toml src/worker-types.d.ts",
    "migrations:create": "wrangler d1 migrations create prod-long-game-core -c ./wrangler.toml",
    "migrations:apply:local": "wrangler d1 migrations apply prod-long-game-core --local -c ./wrangler.toml",
    "migrations:apply:remote": "env-cmd wrangler d1 migrations apply prod-long-game-core --remote -c ./wrangler.toml",
    "db:run:local": "wrangler d1 execute prod-long-game-core -c ./wrangler.toml --local --command"
  },
  "dependencies": {
    "@a-type/auth": "catalog:",
    "@a-type/auth-email-ses": "^2.1.16",
    "@a-type/utils": "catalog:",
    "@block65/webcrypto-web-push": "1.0.2",
    "@hono/zod-validator": "catalog:",
    "@long-game/common": "workspace:*",
    "@long-game/game-definition": "workspace:*",
    "@long-game/games": "workspace:*",
    "@long-game/kysely": "workspace:*",
    "@long-game/notifications": "workspace:*",
    "date-fns": "catalog:",
    "durable-utils": "^0.3.4",
    "hono": "catalog:",
    "jose": "^5.9.6",
    "kysely": "catalog:",
    "stripe": "^18.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.8.14",
    "@types/node": "^22.14.0",
    "delay-cli": "catalog:",
    "vitest": "catalog:",
    "wrangler": "catalog:"
  }
}
