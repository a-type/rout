{
  "name": "@long-game/services",
  "private": true,
  "type": "module",
  "exports": {
    "./public-api": {
      "default": "./dist/public-api/hc.js",
      "types": "./dist/public-api/hc.d.js"
    },
    "./game-session": {
      "default": "./dist/game-session/hc.js",
      "types": "./dist/game-session/hc.d.js"
    }
  },
  "scripts": {
    "dev": "pnpm run --filter @long-game/services --parallel \"/^dev:.*/\"",
    "dev:client": "pnpm run build-client --watch --preserveWatchOutput",
    "dev:db": "wrangler dev -c src/db/wrangler.toml --port 3111",
    "dev:public-api:run": "sleep 2 && wrangler dev -c src/public-api/wrangler.toml --port 3101",
    "dev:game-session:run": "sleep 3 && wrangler dev -c src/game-session/wrangler.toml --port 3102",
    "migrations:apply:local": "CI=true wrangler d1 migrations apply prod-long-game-core-d1 --local -c src/db/wrangler.toml",
    "migrations:apply:remote": "CI=true wrangler d1 migrations apply prod-long-game-core-d1 --remote -c src/db/wrangler.toml",
    "build": "pnpm run --filter @long-game/services --parallel \"/^build:.*/\"",
    "build:client": "tsc -p tsconfig.client.json",
    "createUser": "node ./scripts/createUser.mjs"
  },
  "dependencies": {
    "hono": "catalog:",
    "@long-game/common": "workspace:*",
    "@long-game/games": "workspace:*",
    "@long-game/game-definition": "workspace:*",
    "@a-type/auth": "catalog:",
    "@a-type/utils": "catalog:",
    "@a-type/kysely": "1.1.1",
    "zod": "catalog:",
    "@hono/zod-validator": "catalog:",
    "kysely": "^0.27.5",
    "kysely-d1": "^0.3.0",
    "kysely-plugin-serialize": "0.6.3",
    "better-sqlite3": "11.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11"
  }
}
