{
  "name": "@long-game/services",
  "private": true,
  "type": "module",
  "exports": {
    "./public-api": {
      "import": "./api/dist/hc.js",
      "types": "./api/dist/hc.d.ts"
    }
  },
  "scripts": {
    "dev": "pnpm run --filter @long-game/services --parallel \"/^dev:.*/\"",
    "dev:client": "pnpm run build:api-client --watch --preserveWatchOutput",
    "dev:public-api:run": "sleep 4 && wrangler dev -c api/wrangler.toml --port 3101 --ip 127.0.0.1",
    "dev:db": "wrangler dev -c db/wrangler.toml --port 3111 --ip 127.0.0.1",
    "migrations:apply:local": "CI=true wrangler d1 migrations apply prod-long-game-core --local -c db/wrangler.toml",
    "migrations:apply:remote": "CI=true wrangler d1 migrations apply prod-long-game-core --remote -c db/wrangler.toml",
    "build": "pnpm run --filter @long-game/services --parallel \"/^build:.*/\"",
    "build:api-client": "tsc -p api/tsconfig.client.json",
    "build:api": "wrangler deploy --dry-run --outdir dist --config api/wrangler.toml",
    "build:db": "wrangler deploy --dry-run --outdir dist --config db/wrangler.toml",
    "types:api": "wrangler types --env-interface=ApiBindings --config api/wrangler.toml api/src/worker-types.d.ts",
    "types:db": "wrangler types --env-interface=DbBindings --config db/wrangler.toml db/src/worker-types.d.ts",
    "types": "pnpm run --filter @long-game/services --parallel \"/^types:.*/\"",
    "test:run": "vitest"
  },
  "dependencies": {
    "@a-type/auth": "catalog:",
    "@a-type/auth-email-ses": "^2.1.8",
    "@a-type/utils": "catalog:",
    "@hono/zod-validator": "catalog:",
    "@long-game/common": "workspace:*",
    "@long-game/game-definition": "workspace:*",
    "@long-game/games": "workspace:*",
    "hono": "catalog:",
    "jose": "^5.9.6",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.8.14",
    "@types/node": "^22.14.0",
    "vitest": "catalog:"
  }
}
