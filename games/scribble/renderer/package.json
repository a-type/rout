{
  "name": "@long-game/game-scribble-renderer",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": {
      "workerd": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css.css": {
      "import": "./dist/uno.css",
      "types": "./dist/uno.css.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "pnpm build:ts && pnpm build:css && pnpm build:uno",
    "build:ts": "tsc",
    "build:css": "scripts css ./dist",
    "build:uno": "scripts uno ./dist",
    "dev": "pnpm run --filter @long-game/game-scribble-renderer --parallel \"/^dev:.*/\"",
    "dev:ts": "tsc -w --preserveWatchOutput",
    "dev:uno": "scripts uno ./dist -w",
    "test": "vitest"
  },
  "dependencies": {
    "@long-game/common": "workspace:*",
    "@long-game/game-client": "workspace:*",
    "@long-game/game-definition": "workspace:*",
    "@long-game/game-scribble-definition": "workspace:*",
    "@long-game/game-ui": "workspace:*",
    "perfect-freehand": "^1.2.2",
    "react": "catalog:",
    "react-dom": "catalog:",
    "valtio": "catalog:"
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "@long-game/scripts": "workspace:*"
  }
}
