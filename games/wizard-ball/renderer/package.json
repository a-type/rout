{
  "name": "@long-game/game-wizard-ball-renderer",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": {
      "workerd": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css.css": {
      "import": "./dist/uno.css",
      "types": "./dist/uno.css.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "pnpm build:ts && pnpm build:css && pnpm build:uno",
    "build:ts": "tsc",
    "build:css": "scripts css ./dist",
    "build:uno": "scripts uno ./dist",
    "dev": "pnpm run --filter @long-game/game-wizard-ball-renderer --parallel \"/^dev:.*/\"",
    "dev:ts": "tsc -w --preserveWatchOutput",
    "dev:uno": "scripts uno ./dist -w",
    "test": "vitest"
  },
  "dependencies": {
    "@long-game/game-wizard-ball-definition": "workspace:*",
    "@long-game/game-definition": "workspace:*",
    "@long-game/common": "workspace:*",
    "@long-game/game-client": "workspace:*",
    "@long-game/game-ui": "workspace:*",
    "@verdant-web/react-router": "catalog:",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "3.2.2",
    "dayjs": "^1.11.13",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "vitest": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@long-game/scripts": "workspace:*"
  }
}
