{
  "name": "@long-game/game-gudnak-renderer",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": {
      "workerd": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css.css": {
      "import": "./dist/uno.css",
      "types": "./dist/uno.css.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "pnpm build:ts && pnpm build:css && pnpm build:uno && pnpm build:images",
    "build:ts": "tsc",
    "build:css": "scripts css ./dist",
    "build:images": "scripts images ./dist",
    "build:uno": "scripts uno ./dist",
    "dev": "pnpm run --filter @long-game/game-gudnak-renderer --parallel \"/^dev:.*/\"",
    "dev:ts": "tsc -w --preserveWatchOutput",
    "dev:images": "scripts images ./dist -w",
    "dev:uno": "scripts uno ./dist -w",
    "test": "vitest"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@uidotdev/usehooks": "^2.4.1",
    "@long-game/common": "workspace:*",
    "@long-game/game-client": "workspace:*",
    "@long-game/game-definition": "workspace:*",
    "@long-game/game-gudnak-definition": "workspace:*",
    "@long-game/game-ui": "workspace:*",
    "motion": "^12.7.4",
    "react": "catalog:",
    "react-device-detect": "^2.2.1",
    "react-dom": "catalog:",
    "react-flip-toolkit": "^7.2.4",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@long-game/scripts": "workspace:*",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
