{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "test": {
      "outputs": [],
      "inputs": ["**/*.tsx", "**/*.ts", "**/*.test.tsx", "**/*.test.ts"]
    },
    "bench": {
      "outputs": [],
      "inputs": ["**/*.bench.ts"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
