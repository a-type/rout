{
  "name": "@long-game/game-ui",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./genericGames": {
      "production": "./dist/genericGames/index.js",
      "import": "./dist/genericGames/index.js",
      "types": "./dist/genericGames/index.d.ts"
    },
    "./css.css": {
      "default": "./dist/uno.css"
    }
  },
  "type": "module",
  "scripts": {
    "build": "pnpm build:ts && pnpm build:uno",
    "build:ts": "tsc",
    "build:uno": "scripts uno ./dist",
    "dev": "pnpm run --filter @long-game/game-ui --parallel \"/^dev:.*/\"",
    "dev:ts": "tsc -w --preserveWatchOutput",
    "dev:uno": "scripts uno ./dist -w",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "@a-type/ui": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "dependencies": {
    "@a-type/utils": "catalog:",
    "@long-game/common": "workspace:*",
    "@long-game/game-client": "workspace:*",
    "@long-game/game-definition": "workspace:*",
    "@long-game/visual-components": "workspace:*",
    "@long-game/game-renderer": "workspace:*",
    "@react-three/drei": "catalog:",
    "@react-three/fiber": "catalog:",
    "@types/three": "catalog:",
    "@use-gesture/react": "catalog:",
    "@verdant-web/react-router": "catalog:",
    "immer": "catalog:",
    "motion": "catalog:",
    "react-flip-toolkit": "catalog:",
    "three": "catalog:",
    "valtio": "catalog:",
    "zustand": "catalog:"
  },
  "devDependencies": {
    "@long-game/scripts": "workspace:*",
    "@storybook/react-vite": "^9.0.15",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "storybook": "^9.0.15",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "@unocss/transformer-variant-group": "catalog:"
  }
}
