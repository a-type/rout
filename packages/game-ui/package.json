{
  "name": "@long-game/game-ui",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "workerd": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": {
      "default": "./dist/css/main.css"
    }
  },
  "type": "module",
  "scripts": {
    "build": "pnpm build:ts && pnpm build:uno",
    "build:ts": "tsc",
    "build:uno": "scripts uno ./dist",
    "dev": "pnpm run --filter @long-game/game-ui \"/^dev:.*/\" --parallel",
    "dev:ts": "tsc -w --preserveWatchOutput",
    "dev:uno": "scripts uno ./dist -w"
  },
  "peerDependencies": {
    "@a-type/ui": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "dependencies": {
    "@a-type/react-space": "catalog:",
    "@long-game/common": "workspace:*",
    "@long-game/game-client": "workspace:*",
    "@long-game/game-definition": "workspace:*",
    "@react-three/drei": "^9.121.4",
    "@react-three/fiber": "catalog:",
    "@types/three": "^0.172.0",
    "@verdant-web/react-router": "catalog:",
    "three": "^0.172.0",
    "valtio": "catalog:"
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "typescript": "catalog:",
    "@long-game/scripts": "workspace:*"
  }
}
