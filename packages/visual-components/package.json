{
  "name": "@long-game/visual-components",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "workerd": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css.css": {
      "default": "./dist/uno.css"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "pnpm run --filter @long-game/visual-components --parallel \"/^dev:.*/\"",
    "dev:ts": "tsc -w --preserveWatchOutput",
    "dev:uno": "scripts uno ./dist -w",
    "package:dev": "pnpm dev",
    "build": "pnpm build:ts && pnpm build:uno",
    "build:ts": "tsc",
    "build:uno": "scripts uno ./dist"
  },
  "peerDependencies": {
    "@a-type/ui": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "dependencies": {
    "@react-three/drei": "catalog:",
    "@react-three/fiber": "catalog:",
    "three": "catalog:",
    "@long-game/common": "workspace:*"
  },
  "devDependencies": {
    "@types/three": "catalog:",
    "typescript": "5.5.4",
    "@types/react": "catalog:",
    "@long-game/scripts": "workspace:*"
  }
}
