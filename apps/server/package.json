{
  "name": "@long-game/server",
  "type": "module",
  "exports": {
    "./app": {
      "development": "./src/app.ts",
      "production": "./dist/app.js",
      "import": "./dist/app.js",
      "types": "./dist/app.d.ts"
    }
  },
  "scripts": {
    "dev": "env-cmd tsx watch --conditions=development --clear-screen=false ./src/server.ts",
    "setup": "pnpm migrate",
    "start": "node --conditions=production ./dist/server.js",
    "start:local": "env-cmd pnpm start",
    "build": "tsc --build tsconfig.json",
    "vapid": "node ./scripts/generateVapidKeys.js",
    "migrate": "env-cmd long-game-migrate",
    "write-schema": "env-cmd tsx watch --conditions=development ./scripts/writeSchema.ts"
  },
  "dependencies": {
    "@a-type/auth": "catalog:",
    "@a-type/utils": "catalog:",
    "@graphql-yoga/plugin-csrf-prevention": "^3.7.0",
    "@hono/node-server": "1.12.2",
    "@hono/zod-validator": "^0.2.2",
    "@long-game/common": "workspace:*",
    "@long-game/db": "workspace:*",
    "@long-game/game-definition": "workspace:*",
    "@long-game/game-state": "workspace:*",
    "@long-game/games": "workspace:*",
    "@pothos/core": "4.2.0",
    "@pothos/plugin-dataloader": "4.1.0",
    "@pothos/plugin-relay": "4.1.0",
    "@pothos/plugin-scope-auth": "4.1.0",
    "@pothos/plugin-zod": "^4.1.0",
    "dataloader": "^2.2.2",
    "graphql": "^16.9.0",
    "graphql-scalars": "1.23.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-yoga": "5.7.0",
    "hono": "4.5.10",
    "jsonwebtoken": "^9.0.2",
    "web-push": "^3.6.6",
    "zod": "^3.19.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.10.2",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "tsx": "^4.7.0",
    "typescript": "catalog:"
  }
}
